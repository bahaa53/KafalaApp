<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       android:background="@android:color/white">

        <TextView android:id="@+id/tv_sort_by"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  android:text="الترتيب بواسطة"
                  android:gravity="center"
                 android:textStyle="bold"
                  android:layout_marginTop="12dp"
                  android:layout_marginStart="12dp"
                  android:textColor="@color/register_tv_color"/>

        <TextView android:id="@+id/tv_recent"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/tv_sort_by"
                  android:text=" الاحدث"
                  android:gravity="center"
                  android:layout_marginTop="12dp"
                  android:layout_marginStart="12dp"
                  android:textColor="@color/register_tv_color"/>

        <View android:id="@+id/view1"
              android:layout_width="match_parent"
              android:layout_height="1dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tv_recent"
              android:layout_marginTop="12dp"
              android:background="@color/gray_color"/>

        <TextView android:id="@+id/tv_old"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/view1"
                  android:text=" الاقدم"
                  android:gravity="center"
                  android:layout_marginTop="12dp"
                  android:layout_marginStart="12dp"
                  android:paddingBottom="12dp"
                  android:textColor="@color/register_tv_color"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>