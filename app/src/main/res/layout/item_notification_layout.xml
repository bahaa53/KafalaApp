<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintTop_toBottomOf="@+id/tv_logout"
                                                       android:id="@+id/logout_container"
                                                       android:background="@android:color/white">
        <TextView android:id="@+id/tv_adv_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginStart="10dp"
                  android:layout_marginTop="8dp"
                  android:layout_marginBottom="8dp"
                  tools:text="ju,lu,uju,ljmtolt"
                  android:gravity="center"
                  android:textColor="@color/register_tv_color"/>

        <ImageView android:id="@+id/iv_arrow"
                   android:layout_width="15dp"
                   android:layout_height="15dp"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:layout_marginEnd="8dp"
                   android:layout_marginTop="8dp"
                   android:layout_marginBottom="8dp"

                   android:src="@drawable/ic_cancel"/>

        <TextView android:id="@+id/tv_notification_date"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/iv_arrow"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginEnd="10dp"
                  android:layout_marginTop="8dp"
                  android:layout_marginBottom="8dp"
                  tools:text="ju,lu,uju,ljmtolt"
                  android:gravity="center"
                  android:textSize="12sp"
                  android:textColor="@color/register_tv_color"/>

        <View android:id="@+id/view5"
              android:layout_width="match_parent"
              android:layout_height="1dp"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginTop="12dp"
              android:layout_marginStart="8dp"
              android:layout_marginEnd="8dp"
              app:layout_constraintTop_toBottomOf="@+id/tv_notification_date"
              android:background="@color/gray_color"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>